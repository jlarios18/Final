@model HW8Project.Models.Assignment

@{
    ViewData["Title"] = "Create an assignment";
}

<div class="text-center">
    <h1 class="display-4"><strong>Create Assignment</strong></h1>
</div>

<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col-md-6">
            <h2>Need help creating a Homework Assignment?</h2>

            <p>Use this page to enter information about your assignment. Add it and then we'll keep track of it for you. We'll let you see your assignments by priority or due date so you'll never miss getting something done!</p>
            <br>
            <p>Here's what the parts mean:</p>

            <p><strong>Priority</strong> -- 1 is the highest priority</p>
            <br>
            <p><strong>Due</strong> -- due date and time (use Chrome to see a nice date/time chooser!)</p>
            <br>
            <p><strong>Course</strong> -- Select a course, either an existing course or the one you just recently entered.</p>
            <br>
            <p><strong>Title</strong> -- maybe "Homework #1: HTML and CSS"</p>
            <br>
            <p><strong>Notes</strong> -- remind yourself what needs to be done or what's important to complete it; or just whatever you want to say about the assignment</p>
        </div>

        <div class="col-md-6">
            <form asp-action="CreateAssign">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="row">
                    <div class="col-md-4 offset-md-4">
                        <label asp-for="Priority">Priority</label>
                        <select asp-for="Priority" class="form-control">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                            <option value="9">9</option>
                            <option value="10">10</option>
                        </select>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="Due">When is it due?</label>
                    </div>
                    <div class="col-md-6">
                        <input asp-for="Due" class="form-control" placeholder="2020-10-27 09:40:00" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="Course.Name">What Course?</label>
                    </div>
                    <div class="col-md-10">
                        @Html.DropDownList("CourseId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CourseId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12">
                        <label asp-for="Name">Give the assignment a title:</label>
                        <input asp-for="Name" class="form-control" placeholder="Homework #1: HTML and CSS" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12">
                        <label asp-for="Notes">Add some notes about what you need to do to complete it:</label>
                        <textarea asp-for="Notes" rows="6" class="form-control"></textarea>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-8 offset-md-3">
                        <input type="submit" value="Create Assignment" class="btn btn-primary" />
                        @Html.ActionLink("Cancel", "Index", "Assignment", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </form>
        </div>
    </div>
}